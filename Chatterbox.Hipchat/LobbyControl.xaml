<UserControl x:Class="Chatterbox.Hipchat.LobbyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="529" d:DesignHeight="354" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid Margin="10,10,6,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="263*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lstRooms" Margin="10,10,10,48" Grid.ColumnSpan="2" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" />
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" Text="//TODO: Make this not ugly" Foreground="#FF1A931A" Grid.ColumnSpan="2"
                   Grid.Column="0" Height="16" VerticalAlignment="Bottom"/>
        <Button x:Name="btnJoin" Content="Join" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="33" Click="btnJoin_Click" Grid.Column="1" HorizontalAlignment="Right" Width="95"/>
    </Grid>
</UserControl>
